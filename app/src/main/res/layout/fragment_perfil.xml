<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio.Alarme"
    android:background="@drawable/background_home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/btn_medicos"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="270dp"
                android:scaleType="fitXY"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_medicos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_notific"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:scaleType="fitXY"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_notific"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_save_perfil"
            style="@style/foto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="480dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/Letras"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_nome"
            style="@style/text"
            android:layout_marginBottom="550dp"
            android:textSize="20sp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_genero"
            style="@style/text"
            android:layout_marginStart="65dp"
            android:textSize="15sp"
            android:layout_marginBottom="465dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_idade"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="465dp"
            android:layout_marginStart="255dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_altura"
            style="@style/text"
            android:layout_marginBottom="390dp"
            android:layout_marginStart="65dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_peso"
            style="@style/text"
            android:textSize="15sp"
            android:layout_marginBottom="390dp"
            android:layout_marginStart="255dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/container_bio"
            style="@style/Edit_Text_Perfil"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="180dp"
            android:layout_height="400dp"
            android:gravity="top"
            android:textColor="@color/Letras"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tituloBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="350dp"
            android:elevation="4dp"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:gravity="top"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:text="Biografia"
            android:textAlignment="center"
            android:textColor="@color/Letras"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/container_bio"
            app:layout_constraintEnd_toEndOf="@id/container_bio"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@id/container_bio"
            app:layout_constraintTop_toTopOf="@id/container_bio"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/View_biografia"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="180dp"
            android:layout_marginEnd="55dp"
            android:elevation="4dp"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:textColor="#6b6965"
            android:textSize="18sp"
            android:textAlignment="center"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:layout_constraintBottom_toBottomOf="@id/container_bio"
            app:layout_constraintEnd_toEndOf="@id/container_bio"
            app:layout_constraintStart_toStartOf="@id/container_bio"
            app:layout_constraintTop_toTopOf="@id/container_bio"
            android:text="Erro ao puxar sua biografia"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/titulo_habitos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:elevation="4dp"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="52dp"
            android:textColor="@color/Letras"
            app:layout_constraintBottom_toBottomOf="@id/container_bio"
            app:layout_constraintEnd_toEndOf="@id/container_bio"
            app:layout_constraintStart_toStartOf="@id/container_bio"
            app:layout_constraintTop_toTopOf="@+id/container_bio"
            android:textAlignment="center"
            android:text="Hábitos"
            />


        <TextView
            android:id="@+id/View_biografia_habitos"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="200dp"
            android:textSize="18sp"
            android:elevation="4dp"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="52dp"
            android:textColor="#6b6965"
            app:layout_constraintBottom_toBottomOf="@id/container_bio"
            app:layout_constraintEnd_toEndOf="@id/container_bio"
            app:layout_constraintStart_toStartOf="@id/container_bio"
            app:layout_constraintTop_toTopOf="@+id/container_bio"
            android:textAlignment="center"
            android:text="Habitos não fornecidos"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_editarPerfil"
            style="@style/Button_salvar"
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:layout_marginEnd="170dp"
            android:elevation="2dp"
            android:background="@drawable/button_editar"
            android:text="@string/string_editar"
            android:textColor="@color/off_white"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/container_bio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_save_perfil" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cod_usuario"
            style="@style/Button_salvar"
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:layout_marginStart="170dp"
            android:elevation="2dp"
            android:background="@drawable/button_roxo"
            android:text="@string/text_listaAmigos"
            android:textColor="@color/off_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/container_bio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_save_perfil" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="213dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.83" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
