<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="430dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/container_components_morte">

    <TextView
        android:id="@+id/textView_codigo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:gravity="center"
        android:text="VocÃª tem certeza que deseja deletar?"
        android:textColor="@color/vermelho_alerta"
        android:textSize="22sp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAceitar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/button_notifiq"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="@color/off_white"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRejeitar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/button_with_x"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="@color/off_white"
        android:layout_marginTop="90dp"
        android:layout_marginStart="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

</android.support.constraint.ConstraintLayout>