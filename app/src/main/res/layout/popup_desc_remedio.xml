<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_remedios">

    <ImageButton
        android:id="@+id/btn_voltarpop"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/arrow_voltar_vermelho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_descRemedio"
        android:layout_width="360dp"
        android:layout_height="590dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_widget_remedio"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nomere"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="480dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="#807e7a"
        android:textSize="30sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio" />

    <TextView
        android:id="@+id/descricao1"
        android:layout_width="255dp"
        android:layout_height="225dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:gravity="center"
        android:textColor="#807e7a"
        android:elevation="2dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toBottomOf="@+id/nomere"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_remÃ©dio"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/button_verde"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text="@string/text_adc_remed"
        android:textColor="@color/off_white"
        android:layout_marginStart="168dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toBottomOf="@+id/descricao1" />



    <View
        android:layout_width="130dp"
        android:layout_height="126dp"
        android:layout_marginBottom="255dp"
        android:elevation="2dp"
        android:background="@drawable/remedio_foto_widget"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="126dp"
        android:layout_height="122dp"
        android:layout_marginBottom="255dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio">


        <ImageView
            android:id="@+id/foto_Remedio"
            android:layout_width="126dp"
            android:layout_height="122dp"
            />


    </androidx.cardview.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.500684" />


</android.support.constraint.ConstraintLayout>