<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_home">

    <ImageButton
        android:id="@+id/btn_voltarDO"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="357dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/button_back"
        android:padding="15dp"
        android:src="@drawable/arrow_voltar_vermelho"
        android:text="@string/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/lixeira_doencas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="12dp"
        android:background="#00FFFFFF"
        android:src="@drawable/delete_lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="@+id/btn_voltarDO"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_descRemedio"
        android:layout_width="360dp"
        android:layout_height="590dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_widget"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <TextView
        android:id="@+id/nomeDoenca"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="480dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio" />


    <!-- Ajuste para centralizar verticalmente -->


    <TextView
        android:id="@+id/descricao2"
        android:layout_width="255dp"
        android:layout_height="225dp"
        android:layout_marginTop="130dp"
        android:elevation="2dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@+id/view_descRemedio"
        app:layout_constraintVertical_bias="0.723" />

    <View
        android:id="@+id/view2"
        android:layout_width="130dp"
        android:layout_height="126dp"
        android:layout_marginBottom="255dp"
        android:background="@drawable/doenca_foto_widget"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="126dp"
        android:layout_height="122dp"
        android:layout_marginBottom="255dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio">


        <ImageView
            android:id="@+id/foto_Doenca"
            android:layout_width="126dp"
            android:layout_height="122dp"
            android:scaleType="centerCrop"
            />


    </androidx.cardview.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.500684" />


</android.support.constraint.ConstraintLayout>