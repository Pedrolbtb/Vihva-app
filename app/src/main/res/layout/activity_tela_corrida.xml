<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/off_white"
    android:layout_height="match_parent"
    tools:context=".Inicio.telaCorrida">


    <ImageButton
        android:id="@+id/btnVoltarWatch"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/button_back"
        android:padding="15dp"
        android:src="@drawable/arrow_voltar_vermelho"
        android:text="@string/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/breadNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="525dp"
        android:fontFamily="@font/peanut_butter"
        android:text="@string/text_teladecorrida"
        android:textColor="@color/Letras"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewVihvawatch"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:background="@drawable/container_vihvawatch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text="Ãšltimos dados gravados"
        android:textColor="@color/hint"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="205dp"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="@id/viewVihvawatch"
        app:layout_constraintBottom_toBottomOf="@id/viewVihvawatch"
        app:layout_constraintEnd_toEndOf="@id/viewVihvawatch"
        app:layout_constraintStart_toStartOf="@id/viewVihvawatch">


        <TextView
            android:id="@+id/text_passos"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_caminhadawatch"
            android:drawablePadding="3dp"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:text="Passos: 0"
            android:textColor="@color/Letras"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/text_batimentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batimentos: 0 BPM"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:textColor="@color/Letras"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_coracao"
            android:drawablePadding="3dp"
            />

        <TextView
            android:id="@+id/text_distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia: 0 Km"
            android:textColor="@color/Letras"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_distancia"
            android:drawablePadding="3dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>